{
  "extends": ["stylelint-config-standard"],
  "plugins": ["stylelint-order"],
  "rules": {
    "font-weight-notation": "numeric",
    "order/order": [
      "custom-properties",
      "declarations"
    ],
    "order/properties-alphabetical-order": true,
    "at-rule-no-unknown": [
      true, {
        "ignoreAtRules": ["extend", "each", "for", "if", "else"]
      }
    ]
  },
  "syntax": "scss"
}
